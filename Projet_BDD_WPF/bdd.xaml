<Window x:Class="Projet_BDD_WPF.bdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projet_BDD_WPF"
        mc:Ignorable="d"
        Title="bdd" Height="250" Width="400">
    <Grid>
        <RadioButton x:Name="standard" Content="BDD bouquets standards" HorizontalAlignment="Left" Margin="100,50,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <RadioButton x:Name="produit" Content="BDD produits" HorizontalAlignment="Left" Margin="100,-50,0,0" VerticalAlignment="Center" />
        <RadioButton x:Name="client" Content="BDD clients" HorizontalAlignment="Left" Margin="100,120,0,0" VerticalAlignment="Top" />
        <Button Content="Valider" HorizontalAlignment="Left" Margin="280,186,0,0" VerticalAlignment="Top" Click="clickval"/>
        
    </Grid>
</Window>

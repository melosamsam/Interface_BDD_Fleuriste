<Window x:Class="Projet_BDD_WPF.Standard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projet_BDD_WPF"
        mc:Ignorable="d"
        Title="Standard" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="75,30,0,0" Text="Bouquets disponibles :" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock x:Name="liste" HorizontalAlignment="Left" Margin="75,75,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBox x:Name="choix" HorizontalAlignment="Left" Margin="640,350,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="400,350,0,0" Text="Saisir le nom du bouquet souhaité" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button Content="Valider" HorizontalAlignment="Left" Margin="680,380,0,0" VerticalAlignment="Top" Click="clickchoix"/>
        <TextBlock x:Name="reessayer" HorizontalAlignment="Left" Margin="400,380,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top"/>
    </Grid>
</Window>
